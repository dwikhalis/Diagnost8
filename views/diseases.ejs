<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Disease</title>
</head>
<body>
    <a href="/"><button>Home</button></a>
    <a href="/diseases"><button>Diseases</button></a>
    <a href="/medicines"><button>Medicines</button></a>
    <a href="/diseases/add"><button>Add Diseases</button></a>
    <a href="/medicines/add"><button>Add Medicine</button></a>
    <h1>Diseases</h1>
    <form action="/diseases" method="get">
        <input type="text" name="search" placeholder="by diagnosis">
        <input type="submit" value="search">
    </form>
    <br>
    <table border="1">
        <th>Name</th>
        <th>Diagnosis</th>
        <th>Procedure</th>
        <th>Status</th>
        <% data.forEach(el => { %>
            <tr>
                <td><%= el.name %></td>
                <td><%= el.diagnosis %></td>
                <td><%= el.procedure %></td>
                <td><%= el.status %></td>
                <td><a href="/diseases/<%= el.id %>"><button>Details</button></a></td>
                <td><a href="/diseases/<%= el.id %>/delete"><button>Delete</button></a></td>
                <td><a href="/diseases/<%= el.id %>/change"><button>Change</button></a></td>
            </tr>
        <% }); %>
    </table>
</body>
</html>